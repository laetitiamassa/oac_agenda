<p id="notice"><%= notice %></p>



<h1>Listing Events</h1>


<% @events.each do |event| %>
<div>
  <div class="small-3 columns">
    <div class="item-wrapper">
      <div class="img-wrapper">
      <% if user_signed_in? %>
      <% unless current_user.id == event.orgn.user.id %>
        <a class="button expand add-to-cart" href="#" d1ata-reveal-id="event_<%= event.id%>"><i class="fi-heart"></i> Suivre cette évenment</a>
        <a href="#"><img src="http://i.imgur.com/Mcw06Yt.png"></a>
      <% else %>
        <a class="button expand add-to-cart" href="#" d1ata-reveal-id="event_<%= event.id%>">details de l'event...</a>
        <a href="/events/<%= event.id%>"><%= image_tag event.flyer.url(:medium)%></a>
      <% end %>
      <% end %>
      </div>
      <h4><b><%= link_to event.enom, event %></h4></b>
      <h7><i class="fi-calendar"></i> du <%= event.esdate.to_date %> à <%= event.esdate.strftime("%H:%M") %> fini le <%= event.eedate.to_date %> à <%= event.eedate.strftime("%H:%M") %></h7>
      <p><%= render_hashtags(event.edesc) %></p>
    </div>
  </div>
</div>

<div id="event_<%= event.id%>" class="reveal-modal small" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <b>Suivre l'evenement <%= event.enom %>?</b><br>
    <%= render "folevent" %>
</div>
<%end%>


<table>
  <thead>
    <tr>
      <th>Orgn</th>
      <th>Enom</th>
      <th>Edesc</th>
      <th>Edate</th>
      <th>Pafpre</th>
      <th>Pafplace</th>
      <th>Pays</th>
      <th>Ville</th>
      <th>Codepostal</th>
      <th>Rue</th>
      <th>Nrrue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.orgn.oname %></td>
        <td><%= event.enom %></td>
        <td><%= render_hashtags(event.edesc) %></td>
        <td><%= event.esdate %></td>
        <td><%= event.pafpre %></td>
        <td><%= event.pafplace %></td>
        <td><%= event.pays %></td>
        <td><%= event.ville %></td>
        <td><%= event.codepostal %></td>
        <td><%= event.rue %></td>
        <td><%= event.nrrue %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

